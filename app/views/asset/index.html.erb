<!doctype html>
<html lang="ja">
  <head>
    <title>純資産管理 | FAM (Finantial Management)</title>
  </head>
  <body>
    <%= link_to("資産登録", "/asset/new") %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">資産種類</th>
          <th scope="col">資産名称</th>
        </tr>
      </thead>
      <tbody>
         <% @assets.each do |h| %>
          <tr>
            <th scope="row"><%= h.id %></th>
              <td><%= h.asset_type %></td>
              <td><%= h.name %></td>
              <td>
                <%= link_to '削除', asset_path(h), method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </body>
</html>