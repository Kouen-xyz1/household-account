<div class="container">
  <%= form_with model: @household do |form| %>
    <div class="form-group">
      <%= form.label :entry_date %>
      <%= form.date_field :entry_date, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :category %>
      <%= form.select :category, @categories.invert, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :sub_category1 %>
      <%= form.select :sub_category1, @categories_middles.invert, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :sub_category2 %>
      <%= form.select :sub_category2, @categories_lows.invert, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :payment %>
      <%= form.select :payment,  Household.payments_i18n.keys.map { |k| [Household.payments_i18n[k], k]}, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :result %>
      <%= form.number_field :result, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :sum_credit %>
      <%= form.number_field :sum_credit, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :check_out %>
      <%= form.select :check_out,  Household.check_outs_i18n.keys.map { |k| [Household.check_outs_i18n[k], k]}, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :detail %>
       <%= form.select :detail,  Household.details_i18n.keys.map { |k| [Household.details_i18n[k], k]}, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :analysis %>
      <%= form.select :analysis,  Household.analyses_i18n.keys.map { |k| [Household.analyses_i18n[k], k]}, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :client %>
      <%= form.text_field :client, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_field :content, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.submit "保存", :class => "btn btn-info" %>
    </div>
  <% end %>
</div>