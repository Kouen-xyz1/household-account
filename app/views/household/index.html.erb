<%= link_to("家計簿登録", "/household/new") %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">日付</th>
      <th scope="col">大項目</th>
      <th scope="col">中項目</th>
      <th scope="col">小項目</th>
      <th scope="col">支払方法</th>
      <th scope="col">実績</th>
      <th scope="col">C合計</th>
      <th scope="col">精算</th>
      <th scope="col">明細</th>
      <th scope="col">分析</th>
      <th scope="col">取引先</th>
      <th scope="col">内容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @households.each do |h| %>
      <tr>
        <th scope="row"><%= h.id %></th>
        <td><%= h.entry_date %></td>
        <td><%= @categories[h.category] %></td>
        <td><%= @categories_middles[h.sub_category1] %></td>
        <td><%= @categories_lows[h.sub_category2] %></td>

        
        
        <td><%= h.payment_i18n %></td>
        <td><%= number_to_currency(h.result, :unit => "¥",:precision => 0) %></td>
        <td><%= number_to_currency(h.sum_credit, :unit => "¥", :precision => 0) %></td>
        <td><%= h.check_out_i18n %></td>
        <td><%= h.detail_i18n %></td>
        <td><%= h.analysis_i18n %></td>
        <td><%= h.client %></td>
        <td><%= h.content %></td>
        <td>
          <%= link_to '削除', household_path(h), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>